<div class="d-flex justify-content-center position-relative" style="height: 100px">
	<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 240 240" transform="scale(0.7, 0.7)">
		<defs>
			<linearGradient id="a" x1=".667" x2=".417" y1=".167" y2=".75">
				<stop offset="0" stop-color="#37aee2" />
				<stop offset="1" stop-color="#1e96c8" />
			</linearGradient>
			<linearGradient id="b" x1=".66" x2=".851" y1=".437" y2=".802">
				<stop offset="0" stop-color="#eff7fc" />
				<stop offset="1" stop-color="#fff" />
			</linearGradient>
		</defs>
		<circle cx="120" cy="120" r="120" fill="url(#a)" />
		<path fill="#c8daea" d="M98 175c-3.888 0-3.227-1.468-4.568-5.17L82 132.207 170 80" />
		<path fill="#a9c9dd" d="M98 175c3 0 4.325-1.372 6-3l16-15.558-19.958-12.035" />
		<path
			fill="url(#b)"
			d="M100.04 144.41l48.36 35.729c5.519 3.045 9.501 1.468 10.876-5.123l19.685-92.763c2.015-8.08-3.08-11.746-8.36-9.349l-115.59 44.571c-7.89 3.165-7.843 7.567-1.438 9.528l29.663 9.259 68.673-43.325c3.242-1.966 6.218-.91 3.776 1.258"
		/>
	</svg>
	<span class="align-self-center mx-1 fs-1 fw-bold">@BSUMagicPlanbot</span>
	<a href="https://t.me/BSUMagicPlanbot" class="text-decoration-none stretched-link" target="_blank"></a>
</div>
<div class="d-flex">
	<form class="form-check p-0 d-flex" action="/telegram/config" method="post">
		<% subscribers.forEach(sub => { %>
		<div class="card m-3 w-16 h-16">
			<div class="card-body">
				<h5 class="card-title"><%= sub.first_name %> <%= sub.last_name %></h5>
				<h6 class="card-subtitle mb-2 text-muted">Auswahl f√ºr Messagingdienst</h6>
				<ul class="list-group list-group-flush">
					<% publishers.forEach(publisher =>{%>
					<li class="list-group-item">
						<input class="form-check-input mx-3" type="hidden" value="no" name="<%= sub.chat_id+ ':' + publisher%>"
						id="<%=publisher + '-' + sub.chat_id %>" <%= (sub.subscribed_to.includes(publisher)) ? "checked" : "" %>/>
						<input class="form-check-input mx-3" type="checkbox" value="yes" name="<%= sub.chat_id+ ':' + publisher%>"
						id="<%=publisher + '-' + sub.chat_id %>" <%= (sub.subscribed_to.includes(publisher)) ? "checked" : "" %>/>
						<%= publisher %>
					</li>
					<% }) %>
				</ul>
			</div>
			<div class="fixed-bottom">
				<button type="submit" class="btn btn-primary float-end m-3">Speichern</button>
			</div>
		</div>

		<% });%>
	</form>
</div>
