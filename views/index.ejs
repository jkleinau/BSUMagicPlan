<h1 class="fs-1 py-3 text-center text-light">Projekte</h1>
<table class="table table-striped table-dark table-hover">
	<thead>
		<tr>
			<!-- <th scope="col">#</th> -->
			<th scope="col">Projektname</th>
			<th scope="col">Erstellt von</th>
			<th scope="col">zuletzt ge√§ndert</th>
			<th scope="col">erstellt am</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% if(plans != null || plans) {plans.forEach(function (plan, i) { %>
		<tr>
			<!-- <th scope="row"></th> -->
			<td scope="row">
				<a href="/plan/<%= plan.id %> " class="text-decoration-none"><%= plan.name %></a>
			</td>
			<td scope="row"><%= plan.created_by.email %></td>
			<td scope="row"><%= plan.update_date.toLocaleDateString() %></td>
			<td scope="row"><%= plan.creation_date.toLocaleDateString() %></td>
			<td scope="row">
				<a class="btn btn-outline-warning" type="button" href="plan/download/<%= plan.id %> ">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						fill="currentColor"
						class="bi bi-download"
						viewBox="0 0 16 16"
					>
						<path
							d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"
						/>
						<path
							d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"
						/>
					</svg> INFORM
				</a>

				
			</td>
		</tr>
		<% });} %>
	</tbody>
</table>
</div class="d-flex ">
<% if (pages > 0) { %>
	<ul class="pagination justify-content-center text-center">
		<% if (current == 1) { %>
			<li class="page-item disabled"><a class="page-link">Erste</a></li>
		<% } else { %>
			<li class="page-item"><a class="page-link" href="/1">Erste</a></li>
		<% } %>
		<% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
		<% if (i !== 1) { %>
			<li class="page-item disabled"><a class="page-link">...</a></li>
		<% } %>
		<% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
			<% if (i == current) { %>
				<li class="page-item active"><a class="page-link"><%= i %></a></li>
			<% } else { %>
				<li class="page-item"><a class="page-link" href="/<%= i %>"><%= i %></a></li>
			<% } %>
			<% if (i == Number(current) + 4 && i < pages) { %>
				<li class="page-item disabled"><a class="page-link">...</a></li>
			<% } %>
		<% } %>
		<% if (current == pages) { %>
			<li class="page-item disabled"><a class="page-link">Letzte</a></li>
		<% } else { %>
			<li class="page-item" ><a class="page-link" href="/<%= pages %>">Letzte</a></li>
		<% } %>
	</ul>
<% } %>
</div>
