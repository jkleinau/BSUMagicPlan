<h1 class="fs-1 py-3 text-center text-light">Projekte</h1>
<table class="table table-striped table-dark table-hover">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Projektname</th>
			<th scope="col">Erstellt von</th>
			<th scope="col">zuletzt ge√§ndert</th>
			<th scope="col">erstellt am</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% if(plans != null || plans) {plans.forEach(function (plan, i) { %>
		<tr>
			<th scope="row"><%= i %></th>
			<td scope="row">
				<a href="/plan/<%= plan.id %> " class="text-decoration-none"><%= plan.name %></a>
			</td>
			<td scope="row"><%= plan.created_by.email %></td>
			<td scope="row"><%= plan.update_date.toLocaleDateString() %></td>
			<td scope="row"><%= plan.creation_date.toLocaleDateString() %></td>
			<td scope="row">
				<a class="btn btn-info" type="button" href="plan/download/<%= plan.id %> ">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						fill="currentColor"
						class="bi bi-download"
						viewBox="0 0 16 16"
					>
						<path
							d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"
						/>
						<path
							d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"
						/>
					</svg>
				</a>

				<a
					class="btn btn-primary <%= (plan.public_url != null && plan.public_url != '') ? '' :'disabled' %>"
					href="<%= plan.public_url %>"
					target="_blank"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						fill="currentColor"
						class="bi bi-link"
						viewBox="0 0 16 16"
					>
						<path
							d="M6.354 5.5H4a3 3 0 0 0 0 6h3a3 3 0 0 0 2.83-4H9c-.086 0-.17.01-.25.031A2 2 0 0 1 7 10.5H4a2 2 0 1 1 0-4h1.535c.218-.376.495-.714.82-1z"
						/>
						<path
							d="M9 5.5a3 3 0 0 0-2.83 4h1.098A2 2 0 0 1 9 6.5h3a2 2 0 1 1 0 4h-1.535a4.02 4.02 0 0 1-.82 1H12a3 3 0 1 0 0-6H9z"
						/>
					</svg>
				</a>
			</td>
		</tr>
		<% });} %>
	</tbody>
</table>
